                    <label for="formGroupExampleInput" class="form-label">Payment Mode</label>
                    <input type="text" name="booking[mode]" class="form-control" id="formGroupExampleInput" placeholder="Cash" required>
                    <div class="invalid-feedback">Shoud be Title</div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="formGroupExampleInput" class="form-label">Children</label>
                    <input type="text" name="booking[children]" class="form-control" id="formGroupExampleInput" placeholder="Children" required>
                    <div class="invalid-feedback">Shoud be Title</div>
                  </div>
              </div>
              <button type="submit" class="btn btn-primary"><b>Submit</b></button>
